<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" thread-count="2">
    <test verbose="2"  name="Login to application">
        <classes>
            <class name="com.selenium.stackoverflow.test.StackOverFlowTest">
                <methods>
                    <include name="loginToApplication"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2"  name="Logout from application">
        <classes>
            <class name="com.selenium.stackoverflow.test.StackOverFlowTest">
                <methods>
                    <include name="logOutFromApplication"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>